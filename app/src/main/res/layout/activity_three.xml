<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_three"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="scouting2017.pilotappred.three">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:id="@+id/P1"
        android:layout_above="@+id/P2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="106dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="159dp"
        android:id="@+id/P2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/P1" />

    <TextView
        android:text="Yellow Cards?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/textView5"
        android:textSize="36sp" />

    <Button
        android:text="Submit to Server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="createCSV"/>

    <Button
        android:text="+1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/P2card"
        android:background="#fff600"
        android:onClick="P2card"
        android:layout_alignBaseline="@+id/P2"
        android:layout_alignBottom="@+id/P2"
        android:layout_alignStart="@+id/P1card" />

    <Button
        android:text="+1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/P1card"
        android:background="#fff600"
        android:onClick="P1card"
        android:layout_alignBaseline="@+id/P1"
        android:layout_alignBottom="@+id/P1"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Send to other Pilot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/sendOtherPilot"
        android:onClick="sendOtherPilot"/>

    <Button
        android:text="Save Only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sendOtherPilot"
        android:layout_alignStart="@+id/P2card"
        android:id="@+id/saveOnly"
        android:onClick="saveOnly"/>

</RelativeLayout>
